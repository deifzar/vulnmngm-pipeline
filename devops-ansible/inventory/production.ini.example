# Production Inventory Example
# Copy this file to production.ini and fill in your actual values
#
# cp production.ini.example production.ini

[jenkins_controllers]
jenkins-controller-prod ansible_host=<JENKINS_PUBLIC_IP> ansible_user=<SSH_USERNAME>

[jenkins_agents]
jenkins-agent-pod ansible_host=<JENKINS_PRIVATE_AGENT> ansible_user=<SSH_USERNAME> ansible_ssh_common_args='-o ForwardAgent=yes -o ProxyCommand="ssh -W %h:%p -i <PRIVATE_KEY> <SSH_USERNAME_NODE>@<JENKINS_NODE_FQDN>"'
jenkins-agent-prod-2 ansible_host=<JENKINS_PRIVATE_AGENT_2> ansible_user=<SSH_USERNAME> ansible_ssh_common_args='-o ForwardAgent=yes -o ProxyCommand="ssh -W %h:%p -i <PRIVATE_KEY> <SSH_USERNAME_NODE>@<JENKINS_NODE_FQDN>"'

[sonarqube_servers]
sonarqube-prod ansible_host=<SONARQUBE_PUBLIC_IP> ansible_user=<SSH_USERNAME>

[jenkins_controllers:vars]
# SSH configuration - path to your SSH private key
ansible_ssh_private_key_file=<PATH_TO_SSH_PRIVATE_KEY>

[jenkins_agents:vars]
# SSH configuration - path to your SSH private key
ansible_ssh_private_key_file=<PATH_TO_SSH_PRIVATE_KEY>

[sonarqube_servers:vars]
# SSH configuration - path to your SSH private key
ansible_ssh_private_key_file=<PATH_TO_SSH_PRIVATE_KEY>

[devtools:children]
jenkins_controllers
jenkins_agents
sonarqube_servers

# Group variables
[devtools:vars]
ansible_python_interpreter=/usr/bin/python3
# Environment
env=production
